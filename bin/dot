#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export ZSH_DOTFILES=$HOME/Documents/app/dotfiles

# Set OS X defaults
$ZSH_DOTFILES/osx/set-defaults.sh

# Install homebrew
$ZSH_DOTFILES/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

# Install software
echo "› $ZSH_DOTFILES/script/install"
$ZSH_DOTFILES/script/install
